<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_base_background"
    android:weightSum="10.0">
    <RelativeLayout
        android:padding="10dp"
        android:id="@+id/main_rl1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_top_background" >

        <ImageView
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/preview_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15dip"
            android:paddingRight="30dp"
            android:src="@mipmap/button_return" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/preview_name"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/color_base_background1"
        android:gravity="center">
        <TextView
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:background="@color/color_base_background1"
            android:textSize="16sp"
            android:textColor="@color/color_text_blank2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text=""
            android:id="@+id/preview_name"
            android:layout_gravity="center_horizontal" >

        </TextView>

    </LinearLayout>

          <LinearLayout
              android:orientation="vertical"
              android:layout_margin="20dp"
              android:layout_weight="8.0"
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:background="@color/color_base_background1">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/program_text_background"
                        android:background="@color/color_text_blank"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:gravity="center_vertical">


                        <TextView
                            android:gravity="center_horizontal"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:padding="10dp"
                            android:textColor="@color/color_text_yellow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:id="@+id/preview_text" />
                    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2.0"
            android:orientation="horizontal"
            android:padding="10dp"
            >

            <Button
                android:layout_marginTop="40dp"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="wrap_content"
                android:text="@string/preview_name"
                android:textSize="20sp"
                android:background="@drawable/screen_button"
                android:textColor="@color/color_base_text"
                android:id="@+id/preview_start" />
            <Button
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="wrap_content"
                android:text="@string/preview_stop"
                android:textSize="20sp"
                android:background="@drawable/screen_button"
                android:textColor="@color/color_base_text"
                android:id="@+id/preview_stop" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>