<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:background="@color/color_base_background">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:id="@+id/setting_wifi">


        <ImageView
            android:src="@mipmap/setting2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_marginLeft="25dp"
            android:textColor="@color/color_text_blank1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_wifi"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:id="@+id/setting_screenparameters">


        <ImageView
            android:src="@mipmap/setting1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_marginLeft="25dp"
            android:textColor="@color/color_text_blank1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_screenparameters"
            />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:id="@+id/setting_init">


        <ImageView
            android:src="@mipmap/setting2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_marginLeft="25dp"
            android:textColor="@color/color_text_blank1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_init"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:id="@+id/setting_language">


        <ImageView
            android:src="@mipmap/setting3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_marginLeft="25dp"
            android:textColor="@color/color_text_blank1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_language"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:id="@+id/setting_about">


        <ImageView
            android:src="@mipmap/setting4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_marginLeft="25dp"
            android:textColor="@color/color_text_blank1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_about" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:id="@+id/setting_exit">


        <ImageView
            android:src="@mipmap/setting5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_marginLeft="25dp"
            android:textColor="@color/color_text_blank1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_exit"
            />
    </LinearLayout>



</LinearLayout>
