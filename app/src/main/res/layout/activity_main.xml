<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/main"
    android:background="@color/color_base_background"
    tools:context="com.eqled.eqledcontrol.MainActivity">

    <RelativeLayout
        android:id="@+id/textView"
        android:padding="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_top_background" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/color_base_text"
            android:text="@string/app_name"
            android:textSize="20sp"
            android:id="@+id/textView6" />

        <ImageView
            android:layout_marginRight="10dp"
            android:src="@mipmap/add"
            android:padding="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/main_add"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_content"
        android:layout_below="@+id/textView"
        android:layout_above="@+id/main_bottom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </FrameLayout>
    <LinearLayout
        android:background="@color/color_bottom_background"
        android:id="@+id/main_bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:weightSum="9.0"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="3.0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/color_top_background"
            android:id="@+id/main_la1">


            <ImageView

                android:src="@drawable/eq_xianshi"
                android:layout_width="50dp"
                android:layout_height="50dp"
                />

            <TextView
                android:textColor="@color/color_base_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_program"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="3.0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/main_la2">


            <ImageView
                android:src="@drawable/eq_kongzhi"
                android:layout_width="50dp"
                android:layout_height="50dp"
                />

            <TextView
                android:textColor="@color/color_base_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_control"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="3.0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/main_la3">


            <ImageView
                android:src="@drawable/eq_shezhi"
                android:layout_width="50dp"
                android:layout_height="50dp"
                />

            <TextView
                android:textColor="@color/color_base_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_setting"
                />
        </LinearLayout>
    </LinearLayout>




</RelativeLayout>
