<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_base_background1"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp">


    <LinearLayout

        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/dialog_shape"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10">

            <TextView
                android:layout_weight="3.5"

                android:textSize="15sp"
                android:textColor="@color/color_text_blank"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/led_width"
                android:id="@+id/textView4"
                android:layout_gravity="center_horizontal" />

            <Spinner
                android:layout_weight="6.5"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@+id/textView4"
                android:layout_marginRight="10dp"
                android:background="@drawable/spinner_shape"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/led_spinner1"
                 />


        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/color_base_background1"></LinearLayout>


        <LinearLayout
            android:layout_marginLeft="5dp"
           android:weightSum="10"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="3.5"
                android:textSize="15sp"
                android:textColor="@color/color_text_blank"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/led_height"
                android:id="@+id/textView3"
                 />

            <Spinner
                android:layout_weight="6.5"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@+id/textView3"
                android:layout_marginRight="10dp"
                android:background="@drawable/spinner_shape"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/led_spinner2"
                />


        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/dialog_shape"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scimage2"
            android:orientation="horizontal"
             android:gravity="center"
             android:layout_weight="10"
            >

            <TextView
                android:layout_weight="2.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/led_color"
                android:textColor="#000000"
                android:textSize="15sp"

                />

            <RadioGroup
                android:layout_weight="7.5"
                android:id="@+id/rg3"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_height="match_parent"
                android:weightSum="2.0">

                <RadioButton
                    android:layout_weight="1.0"
                    android:id="@+id/colorDoubleBut"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:checked="true"
                    android:text="@string/led_color_monocolor"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <RadioButton
                    android:layout_weight="1.0"
                    android:id="@+id/colorOneBut"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/led_color_bicolor"
                    android:textColor="#000000"
                    android:textSize="15sp" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/color_base_background1"
            ></LinearLayout>
        <LinearLayout
            android:layout_weight="10"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scimage2"
            android:orientation="horizontal"
            android:gravity="center"

            >

            <TextView
                 android:layout_weight="2.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="@string/led_data"
                android:textColor="#000000"
                android:textSize="15sp"

                />

            <RadioGroup
                android:layout_weight="7.5"
                android:id="@+id/rg2"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_height="match_parent"
                android:weightSum="2.0">

                <RadioButton
                    android:layout_weight="1.0"
                    android:id="@+id/datatrueBut"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:checked="true"
                    android:text="@string/led_data_normal"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <RadioButton
                    android:layout_weight="1.0"
                    android:id="@+id/datafalseBut"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/led_data_reverse"
                    android:textColor="#000000"
                    android:textSize="15sp" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/color_base_background1"></LinearLayout>
        <LinearLayout
            android:weightSum="10"
            android:id="@+id/colorLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scimage2"
            android:orientation="horizontal"
            android:gravity="center"

            >

            <TextView
                android:layout_weight="2.5"
                android:id="@+id/colorName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="@string/led_row_order"
                android:textColor="#000000"
                android:textSize="15sp"
                />

            <RadioGroup
                android:layout_weight="7.5"
                android:id="@+id/rg4"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/line_rb1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:checked="true"
                    android:text="@string/led_row_normal"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/line_rb2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+1    "
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:checked="false" />

                <RadioButton
                    android:id="@+id/line_rb3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-1"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:checked="false" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/color_base_background1"></LinearLayout>
        <Button
            android:layout_marginTop="40dp"
            android:id="@+id/led_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/led_send"
            android:textSize="20sp"
            android:background="@drawable/screen_button"
            android:textColor="@color/color_base_text" />

    </LinearLayout>


</LinearLayout>
