<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_base_text">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:weightSum="2.0"
        >
        <LinearLayout
            android:layout_weight="1.0"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/popu_open">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"

                >


                <ImageView
                    android:src="@mipmap/active"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:textColor="@color/color_text_blank1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/control_open"
                    />
            </LinearLayout>




        </LinearLayout>
        <LinearLayout
            android:layout_weight="1.0"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/popu_close">

            <LinearLayout
                android:orientation="vertical"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"

                >


                <ImageView
                    android:src="@mipmap/hover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:textColor="@color/color_text_blank1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/control_close"
                    android:phoneNumber="true" />
            </LinearLayout>




        </LinearLayout>



    </LinearLayout>



</LinearLayout>