<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_base_background1"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    android:fitsSystemWindows="true">



    <LinearLayout
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_base_background"
        android:weightSum="2.0"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1.0"
          android:weightSum="2.0"
          >
          <LinearLayout
              android:layout_weight="1.0"
              android:layout_width="0dp"
              android:gravity="center"
              android:layout_height="match_parent">

              <LinearLayout
                  android:orientation="vertical"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"

                  android:id="@+id/setting_wifi">


                  <ImageView
                      android:src="@mipmap/search"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      />

                  <TextView
                      android:textColor="@color/color_text_blank1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/control_wifi"
                      />
              </LinearLayout>




          </LinearLayout>
          <LinearLayout
              android:layout_weight="1.0"
              android:layout_width="0dp"
              android:gravity="center"
              android:layout_height="match_parent">

              <LinearLayout
                  android:orientation="vertical"

                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"

                  android:id="@+id/control_isopen">


                  <ImageView
                      android:src="@mipmap/screen"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      />

                  <TextView
                      android:textColor="@color/color_text_blank1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/control_isopen"
                      android:phoneNumber="true" />
              </LinearLayout>




          </LinearLayout>



      </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:weightSum="2.0"
            >
            <LinearLayout
                android:layout_weight="1.0"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:id="@+id/contrll_brightness">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    >


                    <ImageView
                        android:src="@mipmap/bulb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:textColor="@color/color_text_blank1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/control_setbrightness"
                        />
                </LinearLayout>




            </LinearLayout>
            <LinearLayout
                android:layout_weight="1.0"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:id="@+id/control_timecollatin">


                    <ImageView
                        android:src="@mipmap/clock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:textColor="@color/color_text_blank1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/control_timecollatin"
                        />
                </LinearLayout>




            </LinearLayout>



        </LinearLayout>


    </LinearLayout>
    

</LinearLayout>
