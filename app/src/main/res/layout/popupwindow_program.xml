<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_base_text"
    android:gravity="center_vertical"
    android:layout_weight="10.0">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.0">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical">
            <TextView
                android:padding="10dp"
                android:textSize="20sp"
                android:textColor="@color/color_top_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/popu_pro_name" />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_top_background">

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4.0"
            android:layout_marginBottom="@dimen/program_control_margin">
            <LinearLayout
                android:layout_weight="1.0"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/popu_pro_send">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:src="@drawable/send"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:textColor="@color/color_text_blank1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/popu_program_send"/>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_weight="1.0"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/popu_pro_show">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:src="@drawable/monitor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:textColor="@color/color_text_blank1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/popu_program_preview"
                        />
                </LinearLayout>




            </LinearLayout>
            <LinearLayout
                android:layout_weight="1.0"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/popu_pro_edit">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">


                    <ImageView
                        android:src="@drawable/pen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:textColor="@color/color_text_blank1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/popu_program_edit"
                        />
                </LinearLayout>




            </LinearLayout>
            <LinearLayout
                android:layout_weight="1.0"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/popu_pro_delete">

                <LinearLayout
                    android:orientation="vertical"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    >


                    <ImageView
                        android:src="@drawable/cross"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:textColor="@color/color_text_blank1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/popu_program_delete"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>